		<dependency>
			<groupId>org.geotools</groupId>
			<artifactId>gt-sample-data-access</artifactId>
			<version>${gt.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<!-- Will not work until ResourcePool is fixed -->
						<exclude>**/SampleDataAccessGetFeatureTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
